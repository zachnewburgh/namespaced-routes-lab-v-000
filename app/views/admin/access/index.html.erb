<%= form_for @preference, url: admin_access_path(@preference) do |f| %>

  <label>Allow Artist Creation</label>
  Y: <%= f.radio_button :allow_create_artists, true %>
  N: <%= f.radio_button :allow_create_artists, false %>

  <label>Allow Song Creation</label>
  Y: <%= f.radio_button :allow_create_songs, true %>
  N: <%= f.radio_button :allow_create_songs, false %>

  <%= f.submit %>

<% end %>